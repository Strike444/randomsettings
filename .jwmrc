<?xml version="1.0"?>
<JWM>
	<Include>$HOME/.jwm/keys</Include>
	<Include>$HOME/.jwm/theme</Include>
	<Include>$HOME/.jwm/startup</Include>
	<!-- The root menu. -->
    <RootMenu onroot="3">
    <!-- <Include>/etc/jwm/debian-menu</Include> -->
    <Include>$HOME/.jwm/menu</Include>
        <Program icon="terminal.png" label="Терминал">sakura</Program>
        <Separator/>
<!--         <Program icon="lock.png" label="Заблокировать экран">
            xscreensaver-command -lock
        </Program>
 -->    
 	    <Restart label="Перезапуск jwm" icon="restart.png"/>
        <Separator/>
        <Menu label="Выход">
        	<Exit label="Завершить сеанс" confirm="true" icon="quit.png"/>
        	<Program label="Перезагрузка">systemctl reboot</Program>
        	<Program label="Выключение">systemctl poweroff</Program>
        </Menu>
    </RootMenu>

    <!-- Options for program groups. -->
<!-- 	<Group>
		<Name>sakura</Name>
 		<Class>terminal</Class>
 		<Option>iignore</Option>
	</Group> -->

	<Group>
    	<Class>Conky</Class>
    	<Option>nolist</Option>
    	<Option>noborder</Option>
    	<Option>notitle</Option>
    	<Option>sticky</Option>
    	<Option>nomin</Option>
    	<Option>nomove</Option>
    	<Option>layer:above</Option>
	</Group>


    <Group>
    	<Name>mate-panel --run-dialog</Name>
    </Group>
    <Group>
        <Class>Pidgin</Class>
        <Option>sticky</Option>
    </Group>
	
	<Group>
        <Name>sakura</Name>
        <Option>opacity:1.0</Option>
        <Option>noborder</Option>
    </Group>


